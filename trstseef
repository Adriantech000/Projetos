    printf("qual a quantidade de faltas? (0 a 50)\n");
    scanf("%d", &faltas);
    
    //calcular media!
    media = (trab1 + prova1)/2;
    printf("a nota é %d\n\n", media);

    printf("oque voce que ver?\n1-media final\n2-mostrar se o aluno passou\n3- ver se o numero é impar e se é multiplo de 5.\n");
    scanf("%d", decisao1);
    
    switch (decisao1){
        case 1:
        printf("a media é %d", media);
        break;
    }
    
    
    
